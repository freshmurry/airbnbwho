<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'room_menu' %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
    
          <div class="panel-heading">
            Description
          </div>
    
          <div class="panel-body">
            <div class="container">
              <%= form_for @room do |f| %>
    
                <div class="">
                  <div class="form-group">
                    <label>Listing Title</label>
                    <%= f.text_field :listing_name, placeholder: "What is your listings title?", class: "form-control", required: true %>
                  </div>
                </div>
    
                <div class="">
                  <div class="form-group">
                    <label>Description</label>
                    <%= f.text_area :summary, rows: 5, placeholder: "Provide a summary of your room", class: "form-control", required: true %>
                  </div>
                </div>
    
                <div class="text-center">
                  <%= f.submit "Save", class: "btn btn-form" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>