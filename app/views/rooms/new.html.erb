<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">
            Create Your Listing
          </div>
          <div class="panel-body">
            <div class="container">
    
              <%= form_for @room do |f| %>
    
                <div class="col-md-4 select">
                  <div class="form-group">
                    <label>Home Type</label>
                      <%= f.select :home_type, [["Apartment", "Apartment"], ["House", "House"], ["Bed & Breakfast", "Bed & Breakfast"]],
                                    id: "home_type", prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
        
                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Room Type</label>
                      <%= f.select :room_type, [["Entire", "Entire"], ["Private", "Private"], ["Shared", "Shared"]],
                                    id: "room_type", prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
        
                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Booking Type</label>
                      <%= f.select :instant, Room.instants.map {|key,value| [key.humanize, key]}, selected: 'Instant', prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
        
                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Accommodate</label>
                      <%= f.select :accommodate, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                    id: "accommodate", prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
        
                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Bedrooms</label>
                      <%= f.select :bed_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                    id: "bed_room", prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
        
                  <div class="col-md-4 select">
                    <div class="form-group">
                      <label>Bathrooms</label>
                      <%= f.select :bath_room, [["1", 1], ["2", 2], ["3", 3], ["4+", 4]],
                                    id: "bath_rooms", prompt: "Select...", class: "form-control" %>
                    </div>
                  </div>
            
                <div class="col-md-12 text-center">
                  <div><%= f.submit "Save", class: "btn btn-normal" %> 
                </div>
    
              <% end %>
            </div>
          </div>
        </div>
      </div>  
    </div>
    
    <div class="col-md-3">
      <div class="panel-default">
        <div class="container">
          <a href="https://track.fiverr.com/visit/?bta=7074&nci=5479&campaign=19735" Target="_Top"><img border="0" src="https://fiverr.ck-cdn.com/tn/serve/?cid=1492998"></a>
          <br><br/>
        </div>
      </div> 
    </div>
  </div>
</section>  