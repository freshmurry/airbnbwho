<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <%= render 'room_menu' %>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
    
          <div class="panel-heading">
            Amenities
          </div>
    
          <div class="panel-body">
            <div class="container">
              <%= form_for @room do |f| %>
    
                  <div class="form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_kitchen %> Kitchen
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_tv %> TV
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_self_parking %> Street Parking
                    </div>
                  </div>

                  <div class="form-group">
                    
                    <div class="col-md-4">
                      <%= f.check_box :is_valet_parking %> Valet Parking
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_garage_parking %> Garage Parking
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_air %> Air Conditioning
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_heating %> Heating
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_wifi %> Wifi
                    </div>
                    <div class="col-md-4">
                      <%= f.check_box :is_handi_accessible %> Handi-Accessible
                    </div>
                  </div>
                  
                  <div class="form-group">
                    <div class="col-md-4">
                      <%= f.check_box :is_bar %> Bar
                    </div>
                  </div>
                  
                  <!--<div class="form-group">-->
                    
                  <!--</div>-->
                  
                  <br/><br/>
    
                  <div class="text-center">
                    <%= f.submit "Save", class: "btn btn-form" %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>