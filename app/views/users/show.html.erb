<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <div class="center">
          <% if user_signed_in? %>
            <% if current_user.image.present? %>
              <%= image_tag current_user.image.url, class: "avatar-full" %>
            <% else %>
              <%= image_tag '/assets/guest.png', class: "avatar-full" %>
            <% end %>

            <% if current_user && current_user != @user %> 
              <%= link_to "Send Message", conversations_path(sender_id: current_user.id, recipient_id: @user.id), method: :post, class: "btn btn-default" %>
            <% end %>
          <% else %>
            <%= image_tag '/assets/guest.png', class: "avatar-full" %>
          <% end %>
        </div>
        <br/>
        <div class="panel panel-default">
          <div class="panel-heading">Verification</div>
          <div class="panel-body">
            <div class="container">
              <ul class="sidebar-list">
                <% if @user.confirmation_token %>
                  <li>Email Address<span class="pull-right"><i class="fas fa-check-circle"></i></span></li>
                <% end %>
                <% if @user.phone_verified %>
                  <li>Phone Number<span class="pull-right"><i class="fas fa-check-circle"></i></span></li>
                <% end %>
                <% if @user.provider %>
                  <li>Facebook<span class="pull-right"><i class="fas fa-check-circle"></i></span></li>
                <% end %>
              </ul>
            </div>  
          </div>
        </div>
    
        <div class="panel panel-default">
          <div class="panel-body">
            <div class="container">
              <ul class="sidebar-list">
                <li>Member since: <b><%= @user.created_at.strftime("%B %Y") %></b></li>&nbsp;
                <li>Last login: <b><%= @user.last_sign_in_at.strftime("%A, %B %d, %Y") %></b></li>
              </ul>
            </div>  
          </div>
        </div>
      </div>
    
      <div class="col-md-9">
        <h2 class="text-blue"><%= @user.fullname %></h2>
        <div class="description row-space-3">
          <%= @user.description %>
        </div>
        
        <!-- YOUR LISTINGS -->
        <% if user_signed_in? && current_user.id != 1 %>
          <!-- Conditional content for logged-in users who are not user ID 1 -->
        <% else %>
          <div class="panel panel-default">
            <div class="panel-heading">Listings (<%= @rooms.length %>)</div>
              <div class="panel-body">
                <div class="container">
                  <%= render partial: "rooms/rooms_list", locals: {rooms: @rooms} %>
                </div>
              </div>
          </div>
        <% end %>
        
        <!-- YOUR REVIEWS -->
        <% if user_signed_in? && current_user.id != 1 %>
          <div class="panel panel-default">
            <div class="panel-heading">Reviews to Host (<%= @host_reviews.count %>)</div>
              <div class="container">
                <div class="panel-body">
                  <%= render "reviews/host_list" %>
                </div>
              </div>  
          </div>
        <% else %>
          <div class="panel panel-default">
            <div class="panel-heading">Reviews from Guest (<%= @guest_reviews.count %>)</div>
              <div class="container">
                <div class="panel-body">
                  <%= render "reviews/guest_list" %>
                </div>
              </div>  
          </div>
        <% end %>
    
      </div>
    </div>
  </div>  
</section>
