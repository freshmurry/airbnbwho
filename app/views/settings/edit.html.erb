<section class="">
  <div class="container">
    <div class="row">
      <div class="col-md-3">
        <ul class="sidebar-list">
          <% if current_user && current_user.id != 1 %>
          <li class="sidebar-item"><%= link_to "Payment", payment_method_path, class: "sidebar-link" %></li>
          <% else %>
          <li class="sidebar-item"><%= link_to "Payout", payout_method_path, class: "sidebar-link" %></li>
          <% end %>
          <li class="sidebar-item"><%= link_to "Notification Settings", notification_settings_path, class: "sidebar-link active" %></li>
        </ul>
      </div>
      <div class="col-md-9">
        <div class="panel panel-default">
          <div class="panel-heading">Notification Settings</div>
          <div class="panel-body">
            <div class="container">
                <%= form_for :setting do |f| %>
                  <div class="row form-group">
                    <div class="col-md-6 text-center">
                      <%= f.check_box :enable_email %> Email
                    </div>
                    <div class="col-md-6 text-center">
                      <%= f.check_box :enable_sms %> SMS
                    </div>
                  </div>
                  <div class="text-center">
                    <%= f.submit "Save Your Settings", class: "btn btn-normal" %>
                  </div>
                <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>